{% extends 'base.html.twig' %}

{% block title %}Producteur index{% endblock %}

{% block body %}
    <h1>Producteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Mail</th>
                <th>Mdp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producteur in producteurs %}
            <tr>
                <td>{{ producteur.id }}</td>
                <td>{{ producteur.nom }}</td>
                <td>{{ producteur.prenom }}</td>
                <td>{{ producteur.tel }}</td>
                <td>{{ producteur.mail }}</td>
                <td>{{ producteur.mdp }}</td>
                <td>
                    <a href="{{ path('producteur_show', {'id': producteur.id}) }}">show</a>
                    <a href="{{ path('producteur_edit', {'id': producteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('producteur_new') }}">Create new</a>
{% endblock %}
