 {% extends 'base.html.twig' %}

{% block title %}New Annonce{% endblock %}



{% block body %}

 <form method="POST" action="{{ path('annonce_new') }}">

    <div class="absolute w-screen h-screen flex flex-col">
            {# Logo Matete #}
            <div class="flex justify-center m-16" >
                <img class="w-3/12 h-3/12" src="{{ asset('image/logotexte.png') }}">
            </div>
            {# Formulaire de connexion #}
            <div class="px-10 p-4 shadow-2xl mx-auto rounded-2xl bg-white">
                <div class="">
                    {#  #}
                    <div class="flex justify-center text-4xl font-extrabold">
                        <h1>Ajouter un annonce</h1>
                    </div>
                    {# Ligne N°1 #}
                    <div class="flex justify-centrer mx-auto">
                        {# Zone de saisie Créneaux début #}
                        <div class="mt-5 w-5/12">
                            <label for="Mail">Créneaux début :</label><br>
                            <input type="datetime-local" id="creneauxDebut" name="creneauxDebut" placeholder="Entrez un Créneaux" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none " required>
                        </div>
                        <div class="mt-5 w-2/12 ">
                        </div>
                        {# Zone de saisie Créneaux Fin #}    
                        <div class="mt-5 w-5/12 ">
                            <label for="pass">Créneaux Fin :</label>
                            <input type="datetime-local" id="creneauxFin" name="creneauxFin" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none " placeholder="Saisir un Créneaux de fin" required>
                        </div>
                    </div>
                    {# Ligne N°2 #}
                    <div class="flex justify-centrer mx-auto">
                        {# Zone de saisie Libellé produit #}
                        <div class="mt-5 w-5/12">
                            <label for="Mail">Libellé du produit :</label><br>
                            <input type="text" id="libelleProduit" name="libelleProduit" placeholder="Entrez un libellé" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none " required>
                        </div>
                        <div class="mt-5 w-2/12 ">
                        </div>
                        {# Zone de saisie Prix Unitaire #}    
                        <div class="mt-5 w-5/12 ">
                            <label for="pass">Prix Unitaire :</label>
                            <input type="number" step="0.01" id="prixUnitaire" name="prixUnitaire" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none " placeholder="Saisir le Prix/unité" required>
                        </div>
                    </div>

                    {# Ligne N°3 #}
                    <div class="flex justify-centrer mx-auto">
                        {# Zone de saisie Quantité #}
                        <div class="mt-5 w-5/12">
                            <label for="Mail">Quantité :</label><br>
                            <input type="number" step="1" id="quantite" name="quantite" placeholder="Entrez une Quantité" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none " required>
                        </div>
                        <div class="mt-5 w-2/12 ">
                        </div>
                        {# Zone de saisie Catégorie #}    
                        <div class="mt-5 w-5/12 ">
                            <label for="pass">Catégorie :</label><br>
                            <select name="categorie" id="categorie" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none">
                                <option value="" disabled selected >Choisir une catégorie</option>
                                {% for categorie in categories %}
                                    <option value="{{ categorie.id }}">{{ categorie.libelle }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    {# Ligne N°4 #}
                    <div class="flex justify-centrer mx-auto">
                        {# Zone de select du lieu #}
                        <div class="mt-5 w-5/12">
                            <label for="lieu">Lieu :</label><br>
                            <select name="leslieux" id="leslieux" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none">
                                <option value="" disabled selected >Selectionner un lieu</option>
                                {% for unlieu in lieux %}
                                    <option value="{{ unlieu.id }}">{{ unlieu.nom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="mt-5 w-2/12 ">
                        </div>
                        {# Bouton création de lieu #}    
                        <div class="mt-5 w-5/12 ">
                            <label for="pass"></label>
                            <button type="submit" id="lieu" name="lieu" class="bg-yellow-300 rounded-lg my-1.5 mt-7 h-10 w-full p-1 focus:outline-none" required><a href="{{ path('lieu_new') }}">Créer un lieu</a></button>
                        </div>
                    </div>


                    {# Boutons de Ajout d'annonce #}
                    <div class="mt-5 flex justify-center">
                        <input type="submit" id="inscription" name="inscription" value="Créer l'annonce" class="w-5/12 p-2.5  bg-yellow-300 rounded-lg">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('log_form') }}">
                </div>
            </div>
        </div> 
        </div>
 </form>
   {# Image de fond #}
 <div class="h-screen w-screen bg-no-repeat bg-cover" style="background-image:url('{{ asset('image/Carte.png') }}')"></div>

 {% include "include/retour.html.twig" %}

{% endblock %}
