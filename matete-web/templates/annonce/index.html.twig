{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreneauxDebut</th>
                <th>CreneauxFin</th>
                <th>LibelleProduit</th>
                <th>PrixUnitaire</th>
                <th>Quantite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.creneauxDebut ? annonce.creneauxDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.creneauxFin ? annonce.creneauxFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.libelleProduit }}</td>
                <td>{{ annonce.prixUnitaire }}</td>
                <td>{{ annonce.quantite }}</td>
                <td>{{ annonce.status}}</td>
                <td>{{ annonce.dateMiseEnLigne }}</td>
                <td>
                    <a href="{{ path('annonce_show', {'id': annonce.id}) }}">show</a>
                    <a href="{{ path('annonce_edit', {'id': annonce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('annonce_new') }}">Create new</a>
{% endblock %}
